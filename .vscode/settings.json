{
	"files.exclude": {
		"**/.cache": true,
		"**/.xmake": true,
		"build":true
	},
	"[cpp]": {
		"editor.defaultFormatter": "xaver.clang-format"
	},
	"clangd.arguments": [
		"--background-index",
		"--compile-commands-dir=.vscode",
		"--header-insertion=never",
		"-j=4",
		"--clang-tidy",
		"--pch-storage=memory",
		"--pretty"
	],
	"xmake.debugConfigType": "codelldb",
}